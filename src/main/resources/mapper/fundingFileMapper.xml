<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.app.candm.mapper.FundingFileMapper">
    <insert id="insert">
        insert into tbl_funding_file(id, funding_id)
        values(#{id}, #{fundingId})
    </insert>
    <select id="selectAllByFundingId">
        select
            id, file_path, file_name, file_original_name,
            file_size, file_content_type, created_datetime, updated_datetime,
            funding_id
        from view_funding_file
        where funding_id = #{id}
        order by created_datetime desc
    </select>

    <delete id="delete">
        delete from tbl_funding_file
        where id = #{id}
    </delete>

    <delete id="deleteByFundingId">
        delete from tbl_funding_file
        where funding_id = #{id}
    </delete>
</mapper>
















